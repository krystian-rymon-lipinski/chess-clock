<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Settings - TextViews -->
    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textColor">@color/blackColor</item>
    </style>

    <!-- Settings - SeekBars -->
    <style name="SettingsSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <!-- Timer - Views -->
    <style name="TimerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TimerTextView" parent="TimerView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blackColor</item>
    </style>

    <style name="TimerTimeTextView" parent="TimerView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
